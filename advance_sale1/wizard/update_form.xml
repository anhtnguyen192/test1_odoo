<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mass_update_view_form" model="ir.ui.view">
        <field name="name">mass.update.view.form</field>
        <field name="model">mass.update</field>
        <field name="arch" type="xml">
            <form string="Mass Update Form">
                <sheet>
                    <group>
                        <field name="discount_code"/>
                    </group>
                    <footer>
                        <button name="mass_update" string="Update" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_act_window_mass_update" model="ir.actions.act_window">
        <field name="name">Mass Update</field>
        <field name="res_model">mass.update</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>